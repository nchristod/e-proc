%li= link_to 'Home', root_path
%li
  - if user_signed_in?
    %li= link_to 'Procurements', procurements_path
    - if current_user.admin?
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          Admin Toolbox
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li= link_to 'Users', users_path
          %li= link_to 'Categories', categories_path
          %li= link_to 'Products', products_path
          %li
            %a{:href => "#"} Something else here
          %li.divider
          %li= link_to("Expired Procurements", expired_procurements_path)
          %li.divider
          %li
            %a{:href => "#"} One more separated link
    - elsif current_user.supplier?
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          User Toolbox
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li= link_to 'My Offers', user_offers_path(current_user)
  - else
    %li= link_to 'Procurements', visitor_procurements_path
