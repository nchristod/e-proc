= simple_form_for [current_user, @offer], html: { class: 'form_horizontal' } do |f|
  = f.error_notification
  .form-inputs
    - if @offer.new_record?
      %label Product:
      = Product.find(params[:product_id]).name
      = f.input :product_id, input_html: { value: params[:product_id]}, wrapper_html: {class: 'hidden'}
      = f.input :procurement_id, input_html: { value: params[:procurement_id]}, wrapper_html: {class: 'hidden'}
      = f.input :user_id, input_html: { value: current_user.id }, wrapper_html: {class: 'hidden'}

    = f.input :offer_economical
    -if @procurement.category == 'advantageous'
      = f.input :offer_technical, label: 'Τεχνική Προσφορά', wrapper: :horizontal_form
      = f.input :delivery_date, label: 'Ημ/νια Παράδοσης', as: :datepicker, wrapper: :horizontal_form
      = f.input :documents, label: 'Extra Documentation', wrapper: :horizontal_file_input do
        = f.file_field :documents, {mutliple: true, name: 'documents[]'}
  .form-actions
    = f.button :submit
