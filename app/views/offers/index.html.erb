<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Offer technical</th>
      <th>Offer economical</th>
      <th>Delivery date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.offer_technical %></td>
        <td><%= offer.offer_economical %></td>
        <td><%= offer.delivery_date %></td>
        <td><%= link_to 'Show', [current_user, offer] %></td>
        <td><%= link_to 'Edit', edit_user_offer_path(current_user, offer) %></td>
        <td><%= link_to 'Destroy',[current_user, offer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

