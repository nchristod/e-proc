<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @procurement.category.titleize %>
</p>

<p>
  <strong>Name:</strong>
  <%= @procurement.name %>
</p>

<p>
  <strong>Proc start date:</strong>
  <%= @procurement.proc_start_date %>
</p>

<p>
  <strong>Proc end date:</strong>
  <%= @procurement.proc_end_date %>
</p>

<p>
  <strong>Proc terms:</strong>
  <%= @procurement.proc_terms %>
</p>

<p>
  <strong>Proc delivery date:</strong>
  <%= @procurement.proc_delivery_date %>
</p>

<div class="row clearfix">
  <div class="col-md-12 table-responsive">
    <table class="table table-bordered table-hover table-sortable" id="tab_logic">
      <thead>
        <tr >
          <th class="text-center">
            Product
          </th>
          <th class="text-center">
            Quantity
          </th>
            <th class="text-center">
            Requirements
          </th>
              <th class="text-center" style="border-top: 1px solid #ffffff; border-right: 1px solid #ffffff;">
          </th>
        </tr>
      </thead>
      <tbody>
        <% @procurement_products.each do |product| %>
          <tr>
            <td><%= product.product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.requirements %></td>
            <td><%= link_to "Offer", new_offer_path(current_user, product_id: product.product.id, procurement_id: @procurement.id), class: 'btn btn-default' if @procurement.underbidding? && current_user.supplier? %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<label>Documentation:</label>
<div>
  <% @procurement.documents.each do |doc| %>
    <li>
    <%= link_to "#{doc.document_file_name}", doc.document.url %>
    </li>
  <% end %> 

</div>


<% if signed_in? && @user.admin? %>
  <%= link_to 'Edit', edit_procurement_path(@procurement) %> | 
  <%= link_to 'Delete', procurement_path(@procurement), :data => { :confirm => "Are you sure?" }, method: :delete %> |
<% end %>
<%= link_to 'Back', procurements_path %>
